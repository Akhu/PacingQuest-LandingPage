---
export const prerender = true
import SkillBadge from './SkillBadge.astro'
const { title, description, tags, image, color } = Astro.props
const badgeList = tags.split(',').map(tag => tag.trim())

const imageUrl = '/images/landing/skill/' + image + '.webp'



const borderColor = {
  'cyan': 'border-cyan-200 dark:border-zinc-800',
  'blue': 'border-blue-200 dark:border-zinc-800',
  'indigo': 'border-indigo-200 dark:border-zinc-800',
  'purple': 'border-purple-200 dark:border-zinc-800',
  'pink': 'border-pink-200 dark:border-zinc-800',
  'red': 'border-red-200 dark:border-zinc-800',
  'orange': 'border-orange-200 dark:border-zinc-800',
  'yellow': 'border-yellow-200 dark:border-zinc-800',
  'green': 'border-green-200 dark:border-zinc-800',
  'teal': 'border-teal-200 dark:border-zinc-800',
}
---

<div class=`flex flex-col mb-8 border-l border-slate-200 dark:border-zinc-800 `>
    <div class="flex md:flex-row flex-col">
      <img src={imageUrl} class="md:mx-4 mb-4 h-20 w-10" alt="small illustration logo"/>
      <div class="flex flex-col shrink">
        <h3 set:html={title} class="mb-3 text-2xl font-black font-title text-slate-700 dark:text-zinc-200 text-left"></h3>
        <ul set:html={description} class="ml-4 mb-6 lg:mb-6 text-slate-600 dark:text-zinc-300 text-left list-disc"></ul>
        <div class="flex flex-row flex-wrap">
          {badgeList.map(badge => 
            <div class="mr-2 mb-2"><SkillBadge text={badge} color={color} /></div>
          )}
        </div>
      </div>
    </div>
  </div>

