---
export const prerender = true
const { postUrl, postTitle, postDate, postUpdatedDate, description, readingTime } = Astro.props

const dateAsDate = new Date(postDate)
---
<a href={postUrl}>
<div class=" dark:text-zinc-100 w-full ">
    <div class="flex flex-row content-between align-middle items-center">
        <div class="flex flex-col flex-grow">
            <div class="flex flex-row content-between">
                <span class="text-sm dark:text-zinc-600 text-slate-400 w-full">~{readingTime} min</span>
                <div class="align-middle space-x-2 ml-28 flex flex-row md:hidden">
                    <span class="text-sm dark:text-zinc-600 ">{dateAsDate.toLocaleDateString("fr")}</span>
                    <i class="fa-solid fa-angle-right text-sm dark:text-zinc-600"></i>
                </div>
            </div>
            <h2 class="dark:text-zinc-100 text-slate-900 font-extrabold font-title lg:leading-loose text-2xl hover:underline mb-4 lg:mb-0">{postTitle} </h2>
            <span class="text-sm dark:text-zinc-400 text-slate-500 line-clamp-2">{description}</span>
            
        </div>
        <div class="align-middle space-x-2 ml-28 hidden md:flex md:flex-row">
            <span class="text-sm dark:text-zinc-600 ">{dateAsDate.toLocaleDateString("fr")}</span>
            <i class="fa-solid fa-angle-right text-sm dark:text-zinc-600"></i>
        </div>
        
    </div>
</div>
</a>