---
export interface Props {
  title: string;
  description?: string;
  iconSrc: string;
  link?: string;
}

const { title, description, iconSrc, link } = Astro.props;
---

<div class="flex flex-col items-center text-center p-6 bg-white rounded-xl shadow-sm hover:shadow-md transition-shadow">
  <div class="w-20 h-20 flex items-center justify-center bg-amber-100 rounded-full mb-4 p-4">
    <img src={iconSrc} alt={title} class="w-full h-full object-contain" />
  </div>
  <h3 class="text-xl font-semibold mb-2">{title}</h3>
  <div class="space-y-2 flex flex-col">
  {description && <p class="text-gray-600">{description}</p>}
    {link && <a class="btn-secondary" href={link}>Plus d'infos</a>}
  </div>
</div>
