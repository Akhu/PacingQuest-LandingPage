---
import "../styles/global.css";
const { pageTitle, metaDescription } = Astro.props;
---

<html lang="fr">
  <head>
    <meta charset="utf-8" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="viewport" content="width=device-width" />
    <meta name="generator" content={Astro.generator} />
    <meta name="description" content={metaDescription || "Pacing Quest - L'application 100% gratuite par les patients, pour les patients pour reprendre le dessus sur la maladie et adapter sa vie."} />

    <meta name="twitter:card" content="summary_large_image" />
    <meta name="twitter:title" content="Pacing Quest - La quête vers la guérison" />
    <meta name="twitter:description" content="L'app gratuite pour suivre ses symptômes et adapter son rythme." />
    <meta name="twitter:image" content="/og-image.jpg" />

    <meta property="og:title" content="Pacing Quest - La quête vers la guérison" />
    <meta property="og:description" content="L'app gratuite par et pour les patients atteints de fatigue chronique ou Covid Long." />
    <meta property="og:image" content="/og-image.jpg" />
    <meta property="og:type" content="website" />
    <meta property="og:url" content="https://pacing.quest" />


    <title> {pageTitle || "Pacing Quest - La quête vers la guérison"} </title>

    <!-- Polices -->
    <link rel="preconnect" href="https://fonts.googleapis.com"/>
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin/>
    <link href="https://fonts.googleapis.com/css2?family=Nunito:wght@300;400;500;600;700;800&display=swap" rel="stylesheet">
  </head>
  <body class="bg-white font-sans nunito-font">
    <slot />
  </body>
</html>

<style is:global>
  :root {
    --primary-color: #4F46E5;
    --secondary-color: #10B981;
    --accent-color: #F59E0B;
    --text-color: #1F2937;
    --light-bg: #F9FAFB;
  }

  body {
    font-family: 'Nunito', sans-serif;
    color: var(--text-color);
    line-height: 1.6;
  }

  .nunito-font {
    font-family: 'Nunito', sans-serif !important;
  }

  .nunito-font * {
    font-family: 'Nunito', sans-serif !important;
  }

  .btn-primary {
    @apply bg-indigo-600 hover:bg-indigo-700 text-white font-medium py-2 px-6 rounded-full transition-all duration-300;
  }

  .btn-secondary {
    @apply bg-white hover:bg-gray-100 text-indigo-600 border border-indigo-600 font-medium py-2 px-6 rounded-full transition-all duration-300;
  }

  .section {
    @apply py-16 px-4 md:px-8 max-w-7xl mx-auto;
  }

  .section-title {
    @apply text-3xl md:text-4xl font-bold mb-4 text-center;
  }

  .section-subtitle {
    @apply text-lg md:text-xl text-gray-600 mb-12 text-center max-w-3xl mx-auto;
  }
</style>
